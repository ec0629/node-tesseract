FROM node:12-buster

WORKDIR /home/app
COPY package.json .

RUN apt-get update \
  && apt-get upgrade -y \
  && apt-get install -y tesseract-ocr \
  && apt-get install -y libtesseract-dev \
  && npm install

ENTRYPOINT [ "bash" ]

